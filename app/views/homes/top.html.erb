
  <div class="container my-5 col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto text-center">
    <% flash.each do |message_type, message| %>
      <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
    <% end %>
    <h1>Welcome to <i class="fas fa-gamepad"></i> ボドゲ交流日記!!</h1>
    <p>
      In <i class="fas fa-gamepad"></i> BoardGameReviews,<br>
      you can share and exchange your opinions, impressions, and emotions<br>
      about various board games!
    </p>
    <% if user_signed_in? %>
      <p>Welcome back, <%= current_user.email %>!</p>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-sm btn-block sign_up" %>
    <% end %>
  </div>


</body>
</html>