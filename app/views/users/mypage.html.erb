<h4>マイページ</h4>

<div class="container my-5">
  <div class="row">
    <div class="col-md-4">
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.profile_image, class: 'img-fluid rounded' %>
      <% else %>
        <%= image_tag 'no_image.jpg', class: 'img-fluid rounded' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <h4>名前: <%= current_user.name %></h4>
      <p>自己紹介: <%= current_user.introduction %></p>
      <%= link_to 'プロフィールを編集', edit_user_path(current_user), class: 'btn btn-primary' %>
    </div>
    
    <h4>投稿一覧</h4><br>

    <% @game_posts.each do |game_post| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <% if game_post.post_image.present? %>
            <%= image_tag game_post.post_image, class: 'card-img-top', style: "height: 200px; object-fit: cover;" %>
          <% else %>
            <div class="card-img-top bg-secondary" style="height: 200px; display: flex; align-items: center; justify-content: center;">
              <span class="text-white">No Image</span>
            </div>
          <% end %>
          <div class="card-body text-center">
            <h5 class="card-title"><%= game_post.post_title %></h5>
            <%= link_to '詳細', game_post_path(game_post), class: 'btn btn-red btn-sm' %>
            <%= link_to '編集', edit_game_post_path(game_post), class: 'btn btn-secondary btn-sm' %>
            <%= link_to '削除', game_post_path(game_post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>