<div class="container my-5 col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto">
<h4>プロフィール編集</h4>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this object from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <label for = "inputName">Name</label>
    <%= f.text_field :name, class: "form-control" %>
  <label for = "inputImage">ProfileImage</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label for = "inputintroduction">introduction</label>
    <%= f.text_field :introduction, class: "form-control" %>
    <%= f.submit "更新", class: 'btn btn-primary' %>
    <%= link_to 'アカウント削除', user_path(@user), method: :delete, class: "text-danger", data: { confirm: '本当に削除しますか？' } %>
 <% end %>

 </div>