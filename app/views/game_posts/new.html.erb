<div class="container my-5 col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto">
            <h4>新規投稿</h4>
    <%= form_with model: @game_post do |f| %>
  <label for = "inputPostTitle">投稿タイトル</label>
            <%= f.text_field :post_title, class: "form-control", placeholder: "〇〇で遊んだ！" %>
            
  <label for = "inputPostBody">本文</label>
            <%= f.text_area :post_body, class: "form-control", placeholder: "1位取れた！" %>
            
  <label for = "inputPostImage">画像</label><br>
      <%= f.file_field :post_image, placeholder: "投稿画像", accept: "image/*" %><br>
  
  <label for = "inputShopName">ショップ名</label>
            <%= f.text_field :shop_name, class: "form-control", placeholder: "買った・遊んだショップ(任意)" %><br>
            
  <label for = "inputShopAddress">住所</label>
            <%= f.text_field :shop_address, class: "form-control", placeholder: "ショップの住所(任意)" %>


        <%= f.submit '投稿', class: "btn btn-lg btn-block mt-4" %>
  <% end %>
 </div>