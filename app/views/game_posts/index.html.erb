<h1>投稿一覧</h1>
    <table class="table table-hover table-inverse">
        <thead>
            <th>Title</th>
            <th>Opinion</th>
        </thead>

        <tbody>
            <% @game_posts.each do |game_post| %>
                <tr>

                    <td><span><%= link_to game_post.post_title, game_post_path(game_post.id) %></span></td>
                    <td><span><%= game_post.post_body %></span></td>
                </tr>
            <% end %>
        </tbody>
    </table>