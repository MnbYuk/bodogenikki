
  <div class="container my-5 col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto text-center">
<h4>ユーザー一覧</h4>
<div class="container my-5">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-12 mb-4">
      <%= link_to user_path(user) do %>
        <div class="card">
          <div class="card-body d-flex">
            <div class="mr-3">
              <%= image_tag user.get_profile_image(200,200) %>
            </div>
            <div>
              <h5 class="card-title">名前：<%= user.name %></h5>
              <p class="card-text"><%= user.introduction %></p>
            </div>
          </div>
        </div>
    <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>